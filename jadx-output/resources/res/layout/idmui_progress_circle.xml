<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/progress_circle_dialog_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.SeslProgressBar
        android:id="@+id/progress_circle"
        android:indeterminate="true"
        style="@style/Widget.ProgressCircleDialog"/>
    <TextView
        android:id="@+id/progress_content"
        style="@style/Widget.TextView.ProgressCircleDialog"/>
</LinearLayout>
