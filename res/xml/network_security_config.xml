<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: trust system and user certificates -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system" />
            <!-- Trust user-installed certificates (for proxy tools like mitmproxy, Burp Suite) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Domain-specific configuration for ospserver.net domains -->
    <!-- Disables SSL verification and allows traffic redirection -->
    <!-- Covers all ospserver.net subdomains including: -->
    <!-- www.ospserver.net, cfota1.ospserver.net, dms.ospserver.net, -->
    <!-- fota-cloud-dn.ospserver.net, cfota2.ospserver.net, cfota3.ospserver.net -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">ospserver.net</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- Domain-specific configuration for samsungdm.com domains -->
    <!-- Disables SSL verification and allows traffic redirection -->
    <!-- Covers ifota-apis.samsungdm.com and other subdomains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">samsungdm.com</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- Debug overrides: allow all certificates and cleartext traffic -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>
